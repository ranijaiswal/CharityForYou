<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FirstPage"
    android:background="#FCE4EC"
    >

    <TextView android:text=" Welcome to Charity For You!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:id="@+id/welcome"
        android:elegantTextHeight="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:textColor="#931010" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp"
        android:text="Please tell us who you are:"
        android:id="@+id/textView"
        android:textColor="#ea7852"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="false"
        android:layout_marginTop="49dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I AM A DONOR "
        android:id="@+id/button_donor"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="donorClicked"
        android:background="#E0E0E0"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I REPRESENT AN ORGANIZATION "
        android:id="@+id/button_organization"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/button_donor"
        android:layout_centerHorizontal="true"
        android:onClick="organizationClicked"
        android:background="#E0E0E0"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <ImageSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSwitcher"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="138dp"
        android:layout_marginStart="138dp" />


</RelativeLayout>
